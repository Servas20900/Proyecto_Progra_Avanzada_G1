@{
    ViewBag.Title = "Principal";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<!-- Bienvenida -->
<div class="row">
    <div class="col-12 mb-4">
        <div class="card">
            <div class="row g-0 align-items-center">
                <div class="col-sm-7">
                    <div class="card-body">
                        <h5 class="card-title text-primary">¡Bienvenido, Franco! 🎉</h5>
                        <p class="mb-0">
