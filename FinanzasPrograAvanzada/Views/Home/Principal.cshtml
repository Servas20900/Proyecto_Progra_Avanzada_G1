
@{
    ViewBag.Title = "Principal";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<!-- Bienvenida -->
<div class="col-lg-8 mb-4 order-0">
    <div class="card">
        <div class="d-flex align-items-end row">
            <div class="col-sm-7">
                <div class="card-body">
                    <h5 class="card-title text-primary">¡Bienvenido, Franco! 🎉</h5>
                    <p class="mb-4">
                        Aquí puedes visualizar el resumen de tus ingresos y gastos recientes.
                        Mantén un control claro de tus finanzas personales.
                    </p>
                    <a href="javascript:;" class="btn btn-sm btn-outline-primary">Ver resumen</a>
                </div>
            </div>
            <div class="col-sm-5 text-center text-sm-left">
                <div class="card-body pb-0 px-0 px-md-4">
                    <img src="../assets/img/illustrations/man-with-laptop-light.png"
                         height="140"
                         alt="Dashboard Usuario"
                         data-app-dark-img="illustrations/man-with-laptop-dark.png"
                         data-app-light-img="illustrations/man-with-laptop-light.png" />
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Resumen Financiero -->
<div class="row mt-4 mb-4">
    <!-- Total de Ingresos -->
    <div class="col-lg-4 col-md-4 col-12 mb-4">
        <div class="card">
            <div class="card-body">
                <div class="card-title d-flex align-items-start justify-content-between">
                    <div class="avatar flex-shrink-0">
                        <img src="../assets/img/icons/unicons/chart-success.png"
                             alt="Ingresos"
                             class="rounded" />
                    </div>
                </div>
                <span class="fw-semibold d-block mb-1">Total de Ingresos</span>
                <h3 class="card-title mb-2 text-success">₡550,000.00</h3>
                <small class="text-muted fw-semibold">Actualizado al 27 de septiembre</small>
            </div>
        </div>
    </div>

    <!-- Total de Gastos -->
    <div class="col-lg-4 col-md-4 col-12 mb-4">
        <div class="card">
            <div class="card-body">
                <div class="card-title d-flex align-items-start justify-content-between">
                    <div class="avatar flex-shrink-0">
                        <img src="../assets/img/icons/unicons/wallet-info.png"
                             alt="Gastos"
                             class="rounded" />
                    </div>
                </div>
                <span class="fw-semibold d-block mb-1">Total de Gastos</span>
                <h3 class="card-title mb-2 text-danger">₡171,950.00</h3>
                <small class="text-muted fw-semibold">Actualizado al 27 de septiembre</small>
            </div>
        </div>
    </div>

    <!-- Saldo Total -->
    <div class="col-lg-4 col-md-4 col-12 mb-4">
        <div class="card">
            <div class="card-body">
                <div class="card-title d-flex align-items-start justify-content-between">
                    <div class="avatar flex-shrink-0">
                        <img src="../assets/img/icons/unicons/cc-primary.png"
                             alt="Saldo Total"
                             class="rounded" />
                    </div>
                </div>
                <span class="fw-semibold d-block mb-1">Saldo Total</span>
                <h3 class="card-title mb-2 text-primary">₡378,050.00</h3>
                <small class="text-muted fw-semibold">Disponible en cuenta</small>
            </div>
        </div>
    </div>
</div>

